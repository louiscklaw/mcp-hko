{
  "name": "mcp-hko",
  "version": "1.0.1",
  "description": "Model Context Protocol server to get ETA (Estimated Time of Arrival) for public transport in Hong Kong",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-hko": "dist/index.js"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "inspect": "export DANGEROUSLY_OMIT_AUTH=true && npx fastmcp inspect src/index.ts",
    "start": "npm run build && node dist/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "hk",
    "bus",
    "eta"
  ],
  "author": "kennyfong19931",
  "license": "MIT",
  "dependencies": {
    "fastmcp": "^1.21.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
