{
    "name": "mcp-hko",
    "version": "1.0.1",
    "description": "Model Context Protocol server to get ETA (Estimated Time of Arrival) for public transport in Hong Kong",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "mcp-hko": "dist/index.js"
    },
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsx src/index.ts",
        "inspect": "export DANGEROUSLY_OMIT_AUTH=true && npx fastmcp inspect src/index.ts",
        "start": "npm run build && node dist/index.js",
        "test": "mocha",
        "test:watch": "mocha --watch",
        "clean": "rm -rf ./dist"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "hk",
        "hko",
        "observatory",
        "weather",
        "hong kong"
    ],
    "license": "MIT",
    "dependencies": {
        "fastmcp": "^1.21.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@types/chai": "^5.2.2",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.14.0",
        "chai": "^5.2.1",
        "mocha": "^11.7.1",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.3",
        "typescript": "^5.8.3"
    }
}